<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.LogInController">
   <children>
      <ImageView fx:id="login_image" fitHeight="150.0" fitWidth="200.0" layoutX="200.0" layoutY="30.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../rsc/login.png" />
         </image>
      </ImageView>
      <Button defaultButton="true" layoutX="191.0" layoutY="342.0" mnemonicParsing="false" onMouseClicked="#loginIn" prefHeight="72.0" prefWidth="218.0" text="Enter">
