            <Font name="System Bold" size="18.0" />
         </font>
      </Button>
      <ImageView fitHeight="79.0" fitWidth="240.0" layoutX="201.0" layoutY="171.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../rsc/password.png" />
         </image>
      </ImageView>
      <TextField fx:id="loginArea" layoutX="226.0" layoutY="123.0" />
      <TextField fx:id="passwordArea" layoutX="226.0" layoutY="264.0" />
      <Text fx:id="textSignal" layoutX="222.0" layoutY="328.0" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER" wrappingWidth="158.0">
         <font>
            <Font size="30.0" />
         </font>
      </Text>
   </children>
   <cursor>
      <Cursor fx:constant="HAND" />
   </cursor>
</AnchorPane>
